{
  "name": "private-markets-api",
  "version": "1.0.0",
  "description": "RESTful API for managing private market funds, investors, and investments",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node -r dotenv/config scripts/migrate.js",
    "migrate:test": "NODE_ENV=test npm run migrate",
    "seed": "node -r dotenv/config scripts/seed.js",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand"
  },
  "author": "Miguel Silva",
  "engines": {
    "node": ">=20.15.1"
  },
  "dependencies": {
    "express": "4.18.2",
    "pg": "8.11.3",
    "dotenv": "16.3.1",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/node": "20.10.6",
    "@types/pg": "8.10.9",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.7",
    "jest": "29.7.0",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.3.3"
  }
}
